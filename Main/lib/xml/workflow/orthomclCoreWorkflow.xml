  <step name="makeDownloadSiteDir" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::InitSiteDir">
    <paramValue name="relativeDir">$$relativeDownloadSiteDir$$</paramValue>
    <depends name="makeGalaxyFiles"/>
  </step>
 
  <step name="moveOrthoGroupsFile" stepClass="ApiCommonWorkflow::Main::WorkflowSteps::MoveFile">
    <paramValue name="inputFile">peripheral/master/mainresult/GroupsFile.txt</paramValue>
    <paramValue name="outputFile">coreGroups/orthomclGroups.txt</paramValue>
    <depends name="makeDownloadSiteDir"/>
  </step>
