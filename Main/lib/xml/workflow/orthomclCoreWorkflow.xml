  <step name="makeGenomicSitesFiles" stepClass="OrthoMCLWorkflow::Main::WorkflowSteps::MakeGenomicSitesFiles">
    <paramValue name="orthomclVersion">$$residualGroupIdPrefix$$</paramValue>
    <paramValue name="peripheralDir">getPeripheralProteins/proteomeDatasets</paramValue>
    <paramValue name="coreMapFile">makeGroups/orthoFinder/master/mainresult/reformattedGroups.txt</paramValue>
    <paramValue name="peripheralMapFileName">peripheral/master/mainresult/GroupsFile.txt</paramValue>
    <paramValue name="residualMapFile">peripheral/master/mainresult/Results/Orthogroups/Orthogroups.txt</paramValue>
    <paramValue name="cladeFile">orthomclClades_RSRC/OrthoMCL6/orthomclClades.txt</paramValue>
    <paramValue name="ecFile">OrganismNameResources/ec_organism.txt</paramValue>
    <depends name="getDataFromVeupathAndUniprot"/>
  </step>

  <step name="makeGalaxyFiles" stepClass="OrthoMCLWorkflow::Main::WorkflowSteps::MakeGalaxyFiles">
    <paramValue name="orthomclVersion">$$residualGroupIdPrefix$$</paramValue>
    <paramValue name="galaxyDir">galaxyFiles</paramValue>
    <paramValue name="coreGroupsFile">peripheral/master/mainresult/GroupsFile.txt</paramValue>
    <paramValue name="residualGroupsFile">peripheral/master/mainresult/Results/Orthogroups/Orthogroups.txt</paramValue>
    <paramValue name="coreSequencesFile">coreGroups/master/mainresult/bestReps.fasta</paramValue>
    <paramValue name="residualSequencesFiles">peripheral/master/mainresult/bestReps.fasta</paramValue>
    <depends name="makeGenomicSitesFiles"/>
  </step>

